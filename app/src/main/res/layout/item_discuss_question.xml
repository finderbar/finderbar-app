<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="Discuss" type="com.finderbar.jovian.models.Discuss"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:orientation="vertical" >
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/up_vote"
                    app:iiv_color="@color/pf_white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    app:iiv_icon="pe7_7s_up_arrow" />
                <TextView
                    android:id="@+id/txt_vote_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/pf_white"
                    android:text="@{(Discuss.upVoteCount - Discuss.downVoteCount) + ``}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"/>
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/down_vote"
                    app:iiv_color="@color/pf_white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    app:iiv_icon="pe7_7s_bottom_arrow" />
                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/favorite"
                    app:iiv_color="@color/pf_white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    app:iiv_icon="pe7_7s_like" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/up_vote_helper"
                    android:text="0"
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/down_vote_helper"
                    android:text="0"
                    android:visibility="invisible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite_helper"
                    android:text="0"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="110dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/pf_white"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="16sp"
                    app:markdown="@{Discuss.body}"/>

                <android.support.design.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:chipSpacing="10dp"
                    app:singleSelection="false"
                    app:chips="@{Discuss.tagIds}"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="right">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#A9E1E1E4"
                        app:thumbImage="@{Discuss.userAvatar}"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:id="@+id/txt_usr_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:textColor="@color/pf_white"
                        android:textSize="16sp"
                        android:paddingLeft="16dp"
                        android:layout_marginBottom="5dp"
                        android:text="@{Discuss.userName}"
                        android:layout_toRightOf="@+id/user_image"/>
                    <TextView
                        android:id="@+id/txt_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_white"
                        android:paddingLeft="16dp"
                        android:textSize="12sp"
                        app:timeAgo="@{Discuss.createdAt}"
                        android:layout_toRightOf="@+id/user_image"
                        android:layout_below="@+id/txt_usr_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_green"
                        android:paddingLeft="16dp"
                        android:textSize="12sp"
                        android:text="@{Discuss.viewCount + `views`}"
                        android:layout_toRightOf="@+id/user_image"
                        android:layout_below="@+id/txt_ago"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="right">
                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_white"
                        android:layout_marginRight="10dp"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{Discuss.commentCount + `comments`}"/>
                    <TextView
                        android:id="@+id/txt_up_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_white"
                        android:layout_marginRight="10dp"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{Discuss.upVoteCount + `upvotes`}"
                        android:layout_toRightOf="@+id/txt_comment"/>
                    <TextView
                        android:id="@+id/txt_down_vote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_white"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="@{Discuss.downVoteCount + `downvotes`}"
                        android:layout_toRightOf="@+id/txt_up_vote"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_border_top_bottom"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pf_white"
                android:text="Edit"
                android:layout_alignParentLeft="true"
                app:iconTint="@color/pf_white"
                android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                app:icon="@drawable/ic_mode_edit_black_24dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
            <Button
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pf_white"
                android:text="Comment"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                app:iconTint="@color/pf_white"
                android:drawableLeft="@drawable/ic_comment_black_24dp"
                app:icon="@drawable/ic_comment_black_24dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pf_white"
                android:text="Share"
                android:layout_alignParentRight="true"
                app:iconTint="@color/pf_white"
                android:drawableLeft="@drawable/ic_share_black_24dp"
                app:icon="@drawable/ic_share_black_24dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pf_white"
            android:background="@color/pf_gold"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="20sp"
            android:text="@{Discuss.answerCount + ` Answers`}"/>
    </LinearLayout>
</layout>
