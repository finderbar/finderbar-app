<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="Answer" type="com.finderbar.jovian.models.Answer"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/answerBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:layout_weight="1"
            android:maxLines = "3"
            android:ellipsize="end"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUpVoteCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4B4A4A"
                android:textSize="12sp"
                android:text="UpVote"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
            />

            <TextView
                android:id="@+id/txtDownVoteCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4B4A4A"
                android:textSize="12sp"
                android:text="DownVote 0"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/txtViewCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#4B4A4A"
                android:textSize="12sp"
                android:text="Views 0"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
            />

            <TextView
                android:id="@+id/tAgo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="#4B4A4A"
                android:textSize="12sp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="just now"
                android:singleLine="true"
            />

        </LinearLayout>
    </LinearLayout>
</layout>