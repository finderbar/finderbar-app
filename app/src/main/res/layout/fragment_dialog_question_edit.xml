<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/round_border_primary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:text="Edit Question"/>
                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pf_white"
                        android:text="Preview"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        app:iconTint="@color/pf_white"
                        android:drawableLeft="@drawable/ic_preview_white_24dp"
                        app:icon="@drawable/ic_preview_white_24dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:layout_toLeftOf="@+id/btn_preview"
                        android:textColor="@color/pf_white"
                        android:drawableLeft="@drawable/ic_save_white_24dp"
                        app:icon="@drawable/ic_save_white_24dp"
                        app:iconTint="@color/pf_white"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/txt_title"
                    android:inputType="text"
                    android:hint="Enter Title"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:background="@drawable/blue_border"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"/>
                <mabbas007.tagsedittext.TagsEditText
                    android:id="@+id/edit_tags_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:allowSpaceInTag="true"
                    app:tagsBackground="@drawable/tag_square"
                    app:tagsCloseImageRight="@drawable/tag_close"
                    app:tagsTextSize="@dimen/defaultTagsTextSize"
                    android:background="@drawable/blue_border"
                    app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="0dp"/>
                <EditText
                    android:id="@+id/txt_primary_editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:hint="@string/markdown_text_editor_enter_text"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="80dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:background="@drawable/blue_border"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorHint="@android:color/darker_gray"/>
                <EditText
                    android:id="@+id/show_err_tag"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="-35dp"
                    android:background="@color/transparent"
                    android:editable="false"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <include layout="@layout/item_editor_action"/>
</android.support.constraint.ConstraintLayout>